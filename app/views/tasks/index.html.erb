<h1>タスク一覧</h1>


  
  
  
  <% if logged_in? %>
  
  <p>ログイン完了ユーザ: <%= current_user.name %></p>
  
  <div class = "row">
    <aside class = "col-sm-4">
      <p>タスク</p>
      <%= form_with(model: @task, local: true) do |f| %>
      
      <div class = "form-group">
        
        <%= f.text_area :content, class: "form-control", rows: 5 %>
        
      </div>
      
      <p>ステータス</p>
      <%= form_with(model: @task, local: true) do |f| %>
      
      <div class = "form-group">
        
        <%= f.text_area :status, class: "form-control", rows: 5 %>
        
      </div>
     
      <%= f.submit "Post", class: "btn btn-primary btn-block" %>
      
      <% end %>
      <% end %>
      
      
    </aside>
    
    <div class = "col-sm-8">
      
      <%= render "tasks/tasks", tasks: @tasks %>
      
    </div>
  </div>
  
  
  
  
  <div class = "dropdown-item"><%= link_to "Logout", logout_path, method: :delete %>
  </div>
  <% else %>
  


<div class = "center jumbotron">
    <div class = "text-center">
        <h1>Welcome to the tasklist</h1>
    </div>
</div>

    <div class = "center jumbotron">
      <div class = "text-center">
        <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
      </div>
    </div>
      
      
    <div class = "center jumbotron">
      <div class = "text-center">
        <%= link_to "Login", login_path, class: "btn btn-lg btn-primary" %>
      </div>
  </div>
<% end %>
